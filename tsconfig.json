{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "noLib": false,
		"noImplicitAny": false,
		"typeRoots": ["node_modules/@types", "types"],
    "paths": {
      
      "@environments": ["src/core/environment"],
      "@constants": ["src/core/constant"],
      "@errors": ["src/core/error-code"],
      "@utility": ["src/core/utility"],
      "@config": ["src/core/config"],
		}
  },
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"coverage",
		"document",
		"dist",
		"backup",
		"**/*.spec.ts"
	]
}
